<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-background-color: #2C2C2C; -fx-padding: 15;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sqlide.NewRow">

    <!-- Cabeçalho informativo -->
    <Label fx:id="DBInfo" alignment="CENTER" textAlignment="CENTER" textFill="#E0E0E0">
        <font>
            <Font name="JetBrains Mono Regular" size="18.0" />
        </font>
        <VBox.margin>
            <Insets bottom="15" />
        </VBox.margin>
    </Label>

    <!-- Área de conteúdo principal com rolagem -->
            <FlowPane fx:id="GridContainer" hgap="15" style="-fx-background-color: #2C2C2C;" vgap="15" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets bottom="10" />
                </padding>
            </FlowPane>

    <!-- Área de botões -->
    <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-padding: 10 0 0 0;">
        <children>
            <Button mnemonicParsing="false" onAction="#exit" style="-fx-background-color: #555; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;" text="Cancel" />
            <Button mnemonicParsing="false" onAction="#addData" style="-fx-background-color: #467FF2; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 25;" text="Save" />
        </children>
    </HBox>
</VBox>
