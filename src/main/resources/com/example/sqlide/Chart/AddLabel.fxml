<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="10.0" style="-fx-background-color: #2C2C2C;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sqlide.Chart.ChartLabel">
   <children>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Label text="Name/Group:" textFill="WHITE" />
            <TextField fx:id="NameField" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Label text="Category (X):" textFill="WHITE" />
            <TextField fx:id="CategoryField" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="15.0" spacing="5.0">
         <children>
            <Label text="Column:" textFill="WHITE" />
            <ChoiceBox fx:id="ColumnBox" prefWidth="150.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Label text="Function:" textFill="WHITE" />
            <ChoiceBox fx:id="FuncBox" prefWidth="150.0" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox alignment="TOP_RIGHT" spacing="5.0">
         <children>
            <Button mnemonicParsing="false" onAction="#confirm" style="-fx-background-color: #3574F0;" text="Create" textFill="WHITE">
               <font>
                  <Font name="Arial" size="12.0" />
               </font></Button>
         </children>
         <padding>
            <Insets bottom="5.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets left="5.0" right="5.0" top="5.0" />
   </padding>
   <stylesheets>
      <URL value="@../../../../css/ChartStyle.css" />
      <URL value="@../../../../css/ChoiceBoxModern.css" />
      <URL value="@../../../../css/ContextMenuStyle.css" />
   </stylesheets>
</VBox>
