<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-background-color: #2B2D30; -fx-border-insets: #2B2D38; -fx-background-insets: #2B2D38; -fx-border-color: #2B2D38;" stylesheets="@../../../css/ContextMenuStyle.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sqlide.OpenDatabaseSelectedController">
   <children>
      <Label fx:id="DatabaseLabel" alignment="CENTER" contentDisplay="CENTER" layoutY="14.0" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Microsoft Tai Le Bold" size="18.0" />
         </font></Label>
      <HBox alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Url:" textFill="WHITE">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <JFXTextField fx:id="UrlFiels" focusColor="#3574f0" style="-fx-text-fill: white;" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="11.0" layoutY="300.0">
         <children>
            <Label text="Port:" textFill="WHITE">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <JFXTextField fx:id="portField" focusColor="#3574f0" style="-fx-text-fill: white;" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="11.0" layoutY="300.0">
         <children>
            <Label text="Database Name:" textFill="WHITE">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <JFXTextField fx:id="NameField" focusColor="#3574f0" style="-fx-text-fill: white;" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="11.0" layoutY="300.0">
         <children>
            <Label alignment="CENTER" text="User:" textFill="#f5f5f5">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <JFXTextField fx:id="UserNameField" focusColor="#3574f0" style="-fx-text-fill: white;" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="Password:" textFill="#f5f5f5">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <JFXPasswordField fx:id="passwordField" focusColor="#3574f0" style="-fx-text-fill: white;" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <JFXCheckBox fx:id="sslBox" checkedColor="#3574f0" layoutX="27.0" layoutY="234.0" mnemonicParsing="false" text="SSL" textFill="WHITE" VBox.vgrow="ALWAYS">
         <padding>
            <Insets right="200.0" />
         </padding></JFXCheckBox>
      <HBox alignment="CENTER_RIGHT" layoutX="11.0" layoutY="300.0" spacing="5.0">
         <children>
            <JFXButton mnemonicParsing="false" onAction="#closeWindow" style="-fx-background-color: #3574F0;" text="Cancel" textFill="WHITE">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </JFXButton>
            <JFXButton mnemonicParsing="false" onAction="#connect" style="-fx-background-color: #3574F0;" text="Confirm" textFill="WHITE">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </JFXButton>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets left="10.0" right="10.0" />
   </padding>
</VBox>
